{
  "name": "backend",
  "version": "1.0.0",
  "description": "A secure url shortener, with qrcode, password protection and expiration time",
  "main": "index.js",
  "author": "Ikechukwu Peter",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "npx nodemon",
    "start": "node ./build/index.js",
    "build": "rimraf ./build && tsc",
    "lint": "npx eslint . --ignore-path .gitignore --ext .js,.ts --fix",
    "format": "npx prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "pre-commit": [
    "lint",
    "format"
  ],
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "nodemon": "^2.0.21",
    "rimraf": "^4.2.0"
  }
}
